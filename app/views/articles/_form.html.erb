<% if @article.errors.any? %>
<ul>
  <% @article.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<p><%= link_to 'Articles List', articles_path %></p>
<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
     <%= f.label :description %><br/>
     <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  
<% end %>