<%= render 'shared/errors', obj: @article %>

<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %><br/>
    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
  </div>
  <div class="form-group">
      <%= f.label "Body", class: "col-sm-2 control-label" %><br/>
      <%= f.text_area :description, class: "form-control", placeholder: "Body of article", autofocus: true, rows:8 %>
  </div>
  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>
  <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
  </div>
<% end %>
