<h1 align="center">Login</h1>

<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group">
      <%= f.label :email , class: "col-sm-2 control-label" %><br/>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
  </div>
    <div class="form-group">
      <%= f.label :password , class: "col-sm-2 control-label" %><br/>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true, autocomplete: "off" %>
  </div>
  <div>
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
  <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
  </div>
<% end %>